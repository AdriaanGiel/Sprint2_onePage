#main-nav
  background-color $secondary-color
  font-size 20px
  font-weight bold
  color white
  ul
    margin 0
    padding 0
    list-style none
  .desktop-nav
    width 100%
    position absolute
    @media screen and (max-width: 767px)
        display none

.mobile-nav
  display none
  position absolute
  li
    background-color rgba(0,0,0,0.2)
  @media screen and (max-width: 767px)
    display flex

.hamburger
  cursor pointer

.nav-item
  padding 1.5em
  a
    text-decoration none

