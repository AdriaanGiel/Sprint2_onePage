html
body
  height 100%

body
  margin 0
  font-family 'Roboto' , sans-serif
  font-size 15px
  color $secondary-color-dark

h2.main-title
  font-size 2.5em

a:visited
  color white

img
  width 100%
  height auto
  
.main-picture
  height 100vh
  z-index 1000
  background url('../img/foosball-min.jpg') no-repeat center center fixed
  @media screen and (max-width 767px)
    background url('../img/foosball-min.jpg') no-repeat center center

.main-center-text
  width 90vh
  height 50vh
  font-size 5em
  color white
  @media screen and (max-width 767px)
    font-size 2em
